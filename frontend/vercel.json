{
    "version": 2,
    "builds": [
      { "src": "frontend", "use": "@vercel/next" },
      { "src": "public/**/*", "use": "@vercel/static" }
    ],
    "routes": [
      { "handle": "filesystem" },
      { "src": "/(.*)", "dest": "/frontend/src/app/$1" }
    ],
    "rewrites": [
      { "source": "/:locale*/(.*)", "destination": "/frontend/src/app/$1" }
    ]
  }
  